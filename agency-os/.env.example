# Agency OS Environment Variables
# Copy to .env and fill in values

# =============================================================================
# Extension Service
# =============================================================================
EXTENSION_SECRET_KEY=change-this-to-a-secure-random-key
DEBUG=false
PORT=8080
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Database (Same as Plane)
# =============================================================================
POSTGRES_HOST=plane-db
POSTGRES_PORT=5432
POSTGRES_DB=plane
POSTGRES_USER=plane
POSTGRES_PASSWORD=plane

# Alternative: Use DATABASE_URL for single connection string
# DATABASE_URL=postgresql://plane:plane@plane-db:5432/plane

# =============================================================================
# Plane API Connection
# =============================================================================
PLANE_API_URL=http://api:8000
PLANE_API_KEY=
PLANE_API_TIMEOUT=30

# =============================================================================
# Plane Core Configuration (pass to Plane containers)
# =============================================================================
PLANE_SECRET_KEY=your-plane-secret-key

# Plane requires these for full functionality
# SMTP Configuration (for emails)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# EMAIL_USE_TLS=true
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# OAuth (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Storage (for file uploads)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET_NAME=
# AWS_S3_REGION_NAME=
