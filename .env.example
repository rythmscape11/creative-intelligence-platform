# Database
# For production, use PostgreSQL or MySQL (Hostinger provides these)
# SQLite is only for development
DATABASE_URL="postgresql://username:password@localhost:5432/mediaplanpro"

# NextAuth.js
# IMPORTANT: Change NEXTAUTH_URL to your production domain
NEXTAUTH_URL="https://yourdomain.com"
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Google OAuth (Optional - for Google Sign-In)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# JWT
JWT_SECRET="your-jwt-secret-here-generate-with-openssl-rand-base64-32"

# OpenAI (Required for AI strategy generation)
OPENAI_API_KEY="sk-your-openai-api-key"

# AWS S3 (Required for file uploads and exports)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="mediaplanpro-files"

# Unsplash (Optional - for blog featured images)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"

# Redis (Optional - for caching and job queues)
REDIS_URL="redis://localhost:6379"

# Sentry (Optional - for error tracking)
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"
META_PIXEL_ID="your-meta-pixel-id"
TIKTOK_PIXEL_ID="your-tiktok-pixel-id"

# Email (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Resend Email Service (Recommended for transactional emails)
RESEND_API_KEY="re_your_resend_api_key"
RESEND_FROM_EMAIL="hello@yourdomain.com"
RESEND_FROM_NAME="Your App Name"
RESEND_REPLY_TO_EMAIL="support@yourdomain.com"
ADMIN_EMAIL="admin@yourdomain.com"

# Google Sheets Integration (Optional - for lead and subscription sync)
GOOGLE_SHEETS_CREDENTIALS='{"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}'
GOOGLE_SHEETS_LEADS_ID="your-leads-sheet-id"
GOOGLE_SHEETS_SUBSCRIPTIONS_ID="your-subscriptions-sheet-id"

# Environment
NODE_ENV="production"
