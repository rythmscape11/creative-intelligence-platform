# MediaPlanPro - Production Environment Variables
# Copy this file to .env.production and fill in the values

# ============================================
# DATABASE (MySQL on Hostinger)
# ============================================
# Format: mysql://username:password@host:port/database
# Example: mysql://u123456789_mediaplan:SecurePass123@localhost:3306/u123456789_mediaplan
DATABASE_URL="mysql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:3306/YOUR_DB_NAME"

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================
# CRITICAL: Change this to your production domain
NEXTAUTH_URL="https://yourdomain.com"

# CRITICAL: Generate a new secret for production
# Run: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_A_NEW_SECRET_HERE_DO_NOT_USE_DEV_SECRET"

# ============================================
# JWT SECRET
# ============================================
# CRITICAL: Generate a new secret for production
# Run: openssl rand -base64 32
JWT_SECRET="GENERATE_A_NEW_JWT_SECRET_HERE"

# ============================================
# GOOGLE OAUTH (Optional)
# ============================================
# Get from: https://console.cloud.google.com/
# Authorized redirect URI: https://yourdomain.com/api/auth/callback/google
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================
# OPENAI API (Optional - for AI features)
# ============================================
OPENAI_API_KEY="sk-proj-your-openai-api-key"

# ============================================
# AWS S3 (Optional - for file uploads)
# ============================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="mediaplanpro-files"

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# SENTRY (Optional - for error tracking)
# ============================================
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-org"
SENTRY_PROJECT="mediaplanpro"

# ============================================
# ANALYTICS (Optional)
# ============================================
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"
META_PIXEL_ID="your-meta-pixel-id"
TIKTOK_PIXEL_ID="your-tiktok-pixel-id"

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="587"
SMTP_USER="noreply@yourdomain.com"
SMTP_PASS="your-email-password"

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV="production"

# ============================================
# SECURITY
# ============================================
# Enable if behind a proxy (Hostinger uses proxies)
TRUST_PROXY="true"

# ============================================
# NOTES
# ============================================
# 1. NEVER commit this file with real values to Git
# 2. Generate new secrets for production (don't reuse dev secrets)
# 3. Use strong passwords for database
# 4. Enable SSL for database connections in production
# 5. Update NEXTAUTH_URL to your actual domain
# 6. Configure Google OAuth redirect URIs in Google Cloud Console

